 <div class = "navigation">
       <%= tabs_tag do |tab| %>
       <%= tab.home      "Home", root_path %>
       <%= tab.promo      "Promoções", promos_all_path %>
       <% end %> 
    </div>

<% if @promos != nil && @promos.count > 0 %>
<section>
      
<% shopping_actual = "" %> 
<% @promos.each do |promo| %>

      <% if promo.shopping_nome != shopping_actual %>
      
       <% reset_cycle("rows") %>
      
      <div class="row">
      <div class="twelve columns">
      <div class="underline"><h3>Promoções do <%= promo.shopping_nome%></h3></div>
      </div>
      
      <% shopping_actual = promo.shopping_nome %>  
      <% end %>
            
<%= cycle("</div><div class='row'>","","",:name => "rows").html_safe %>
<div class="four columns">
       <center>
      <%= link_to image_tag(promo.imagem, :height => "200px"), shopping_loja_promo_path(promo.shopping_id, promo.loja_id, promo) %>
      <p><%= promo.produto%></br>
      <%= promo.desconto %>&#37;  de desconto
      </center>
  <p></p>
</div>
<% end %>
</div>
</section>

<%else %>

		 <div class="row">
      <div class="twelve columns"> 
        <div class="underline"><h2>Não foram encontradas promoções..</h2></div> 
      </div>
		 </div>
</section>


<%end %>
