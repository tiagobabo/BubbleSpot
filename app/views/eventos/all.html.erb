      <div class="twelve columns"> 
        <div class="underline"><h3>Eventos do <%= @shopping.nome %></h3></div>   

          </div>
    
       <% shopping_actual = evento.shopping_nome %>  
      <% end %>

<%= cycle("</div><div class='row'>","","").html_safe %>
<div class="four columns">
   <center>
  <%= link_to image_tag(evento.imagem), shopping_evento_path(@shopping, evento) %>
