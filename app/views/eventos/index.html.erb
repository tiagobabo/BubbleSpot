		 <div class="row">
      <div class="twelve columns"> 
        <div class="underline"><h1>Eventos do <%= @shopping.nome %></h1></div>   
        <p></p>
             <% if @p == 1 || @p == nil%>
         <center>
     <%= link_to 'Esta semana', eventos_shopping_index_url(@shopping, :p => "1"), :class => "nice small radius white button" %>
