<section>
     <div class="row">
      <div class="twelve columns">
      <div class = "navigation">
      <%= tabs_tag do |tab| %>
      <%= tab.home      "Home", root_path %>
      <%= tab.shopping      @shopping.nome, @shopping %>
      <%= tab.evento           "Eventos do " + @shopping.nome, eventos_shopping_index_url(@shopping) %>
      <% end %>
</div>
</div>
</div>
</section>

<% if @eventos_semana != nil && @eventos_semana.count > 0 %>
