     <%= link_to 'Todos os eventos', eventos_shopping_index_url(@shopping, :p => "4"), :class => "nice small radius blue button" %>
     </center>
     <p>
    
    <% elsif @p == 2%>
        <center>
     <%= link_to 'Esta semana', eventos_shopping_index_url(@shopping, :p => "1"), :class => "nice small radius blue button" %>
     <%= link_to 'Próxima semana', eventos_shopping_index_url(@shopping,:p => "2"), :class => "nice small radius white button" %>
     <%= link_to 'Este mês', eventos_shopping_index_url(@shopping,:p => "3"), :class => "nice small radius blue button" %>
     <%= link_to 'Todos os eventos', eventos_shopping_index_url(@shopping,:p => "4"), :class => "nice small radius blue button" %>
     </center>
     <p>
    
    <% elsif @p == 3%>
        <center>
     <%= link_to 'Esta semana', eventos_shopping_index_url(@shopping,:p => "1"), :class => "nice small radius blue button" %>
     <%= link_to 'Próxima semana', eventos_shopping_index_url(@shopping,:p => "2"), :class => "nice small radius blue button" %>
     <%= link_to 'Este mês', eventos_shopping_index_url(@shopping,:p => "3"), :class => "nice small radius white button" %>
     <%= link_to 'Todos os eventos', eventos_shopping_index_url(@shopping,:p => "4"), :class => "nice small radius blue button" %>
     </center>
     <p>
    
    <% elsif @p == 4%>
        <center>
     <%= link_to 'Esta semana', eventos_shopping_index_url(@shopping,:p => "1"), :class => "nice small radius blue button" %>
