<section>
     <div class="row">
      <div class="twelve columns">
      <div class = "navigation">
      <%= tabs_tag do |tab| %>
      <%= tab.home      "Home", root_path %>
      <%= tab.shopping      @shopping.nome, @shopping %>
      <%= tab.evento           "Eventos do " + @shopping.nome, eventos_shopping_index_url(@shopping) %>
      <% end %>
</div>
</div>
</div>
</section>

<% if @eventos != nil && @eventos.count > 0 %>
  <section>
		 <div class="row">
      <div class="twelve columns"> 
        <div class="underline"><h1>Eventos do <%= @shopping.nome %></h1></div>   
        <p></p>
          </div>
    
<% @eventos.each do |evento| %>

<%= cycle("</div><div class='row'>","","","").html_safe %>
<div class="three columns">
   <center>
  <%= link_to image_tag(evento.imagem, :height => "200px"), shopping_evento_path(@shopping, evento) %>
    <p><%= evento.nome%></p>
  </center>
  <p></p>
</div>
<% end %>

</div>
<div class="row">
<div class="twelve columns">
<%= will_paginate @evento, :prev_label => "←Anterior", :next_label => "Próximo→"%>
</div>
</div>
</section>
<%else %>
<section>
		 <div class="row">
      <div class="twelve columns"> 
        <div class="underline"><h2>Não existem eventos..</h2></div> 
      </div>
		 </div>

</section>


<%end %>

