     <%= link_to 'Este mês', eventos_shopping_index_url(@shopping,:p => "3"), :class => "nice small radius blue button" %>
     <%= link_to 'Todos os eventos', eventos_shopping_index_url(@shopping,:p => "4"), :class => "nice small radius white button" %>
     </center>
     <p>
    
    <% end %>
          </div>
    
<% @eventos_semana.each do |evento| %>

<%= cycle("</div><div class='row'>","","","").html_safe %>
<div class="three columns">
   <center>
  <%= link_to image_tag(evento.imagem, :height => "200px"), shopping_evento_path(@shopping, evento) %>
    <p><%= evento.nome%></p>
  </center>
  <p></p>
</div>
<% end %>

</div>

</section>
<%else %>
<section>
		 <div class="row">
      <div class="twelve columns"> 
        <div class="underline"><h4>Não há eventos neste período...</h4></div> 
      </div>
		 </div>

</section>


<%end %>

