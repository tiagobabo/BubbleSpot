<section>
  
  <div class="row">
    <div class ="twelve columns">
      <div class = "navigation">
      <%= tabs_tag do |tab| %>
      <%= tab.home      "Home", root_path %>
      <%= tab.shopping      @shopping.nome, @shopping %>
      <%= tab.lojas      "Lojas do " + @shopping.nome, lojas_shopping_index_url(@shopping) %>
      <%= tab.loja      @loja.nome, @loja %>
      <% end %>
    </div>

       
    </div>
  </div>  

  
  <div class="row">
    <div class ="nine columns">
</br>
<p></p>
        <div class="underline"><h1><%= @loja.nome %></h1></div> 

    </div>
    <div class ="three columns">
<p></p>
<%= image_tag(@loja.imagem, :height => "100px")%>
    </div>
    </div>

  <div class="row">
      <div class="twelve columns">
    <% if @new_promos != nil && @new_promos.count > 0 %>
      <p>
         <div class="underline"><h5>Novas Promoções</h5></div> 

      </p>  
      <p>
        <% @new_promos.each do |promo| %>

        <%= cycle("</div><div class='row'>","","").html_safe %>
        <div class="four columns">
        <center>
        <%= link_to image_tag(promo.imagem, :height => "200px"), shopping_loja_promo_path(@shopping, @loja, promo) %>
        <p><%= promo.produto%></br>
        <%= promo.desconto %>&#37;  de desconto
        </center>
       <p></p>
        </div>
        <% end %>
        <% end %>
      </p> 
  
    <p>
    </div>
    </div>
     <div class="row">
      <div class="twelve columns">
        <% if @last_promos != nil && @last_promos.count > 0 %>
     <div class="underline"><h5>Promoções a Acabar</h5></div> 

     </p>  
    
   <p>
    <% @last_promos.each do |last_promo| %>

    <%= cycle("</div><div class='row'>","","").html_safe %>
    <div class="four columns">
    <center>
    <%= link_to image_tag(last_promo.imagem, :height => "200px"), shopping_loja_promo_path(@shopping, @loja, last_promo) %><p><%= last_promo.produto%></br>
        <%= last_promo.desconto %>&#37;  de desconto</br>
    Termina a <%= last_promo.dataf.strftime("%d-%m-%Y %H:%M")%>
    </center>
   <p></p>
    </div>
    <% end %>
    <% end %>
      
    </div>  
</div>
</section>


