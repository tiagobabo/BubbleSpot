<section>
  
  <div class="row">
    <div class ="twelve columns">
    <div class="show-on-desktops">
      <div class = "navigation">
      <%= tabs_tag do |tab| %>
      <%= tab.home      "Home", root_path %>
      <%= tab.shoppings      "Shoppings", shoppings_path %>
      <%= tab.shopping      @shopping.nome, @shopping %>
      <%= tab.lojas      "Lojas do " + @shopping.nome, lojas_shopping_index_url(@shopping) %>
      <%= tab.loja      @loja.nome, @loja %>
      <% end %>
    </div>
    </div>
       
    </div>
  </div>  

  
  <div class="row">
    <div class ="nine columns">
    </br>
    </br>
        <div class="underline"><h1><%= @loja.nome %></h1></div> 

    </div>
    <div class ="three columns">
</br>
<%= image_tag(@loja.imagem, :height => "100px")%>
    </div>
</div>

    <% if @new_promos != nil && @new_promos.count > 0 %>
     <div class="row">
      <div class="twelve columns">
      </br>
         <div class="underline"><h4>NOVAS PROMOÇÕES</h4></div>   
        </div>
      </br>
        <% @new_promos.each do |promo| %>

        <%= cycle("</div><div class='row'>","","").html_safe %>
        <div class="four columns">
        <center>
        <%= link_to image_tag(promo.imagem, :height => "200px"), shopping_loja_promo_path(@shopping, @loja, promo) %>
        <h6><%= promo.produto%></h6>
        <h6><%= promo.desconto %>&#37;  de desconto</h6>
        </center>
        </br>
        </div>
        <% end %>
            </div>
        <% end %>
      </br> 
  
    </br>     
        <% if @last_promos != nil && @last_promos.count > 0 %>
        <div class="row">
      <div class="twelve columns">
     <div class="underline"><h4>PROMOÇÕES A ACABAR</h4></div>
     </div>
    
   </br>
   <% temp=1 %>
    <% @last_promos.each do |last_promo| %>

    <%= cycle("</div><div class='row'>","","").html_safe %>
    <div class="four columns">
    <center>
    <%= link_to image_tag(last_promo.imagem, :height => "200px"), shopping_loja_promo_path(@shopping, @loja, last_promo) %><h6><%= last_promo.produto%></h6>
        <h6><%= last_promo.desconto %>&#37;  de desconto</h6>
        <div id="year<%= temp %>"><%= last_promo.dataf.year %></div>
    <div id="month<%= temp %>"><%= last_promo.dataf.month %></div>
    <div id="day<%= temp %>"><%= last_promo.dataf.day %></div>
    <div id="hour<%= temp %>"><%= last_promo.dataf.hour %></div>
    <div id="minutes<%= temp %>"><%= last_promo.dataf.min %></div>
    </h5>
    <div id ="teste"><div id="defaultCountdown<%= temp %>" class ="countdown_show6"></div></div>
    </center>
    </br>
    </div>
    <% temp+=1 %>
    <% end %>
     </div>
    <% end %>
        

  <div class="row">
  
  <div class="six columns">
