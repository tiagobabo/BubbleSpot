<div class="hide-on-phones">
 <div class = "navigation">
       <%= tabs_tag do |tab| %>
       <%= tab.home      "Home", root_path %>
       <%= tab.gestao      "Gestão", admins_index_path  %>
       <%= tab.shopping      "Shoppings", admins_users_url  %>
       <% end %> 
    </div>
    </div>
<%= render "shared/error" %>
<section>  
  <div class ="row">
    <div class = "twelve columns">
      <div class="underline"><h1>Gestão de Shoppings</h1></div> 
    </div>
  </div>
  
 
  <div class ="row">
    <div class = "twelve columns">
    <table>
   <tr>
     <th>Nome</th>
     <th>Telefone</th>
     <th>Localização</th>
     <th>Email</th>
     <th></th>
     <th></th>
 <% if @current_admin.tipo == 0 %>
     <th></th>
    <% end %>
     <th></th>
     <th></th>
     <th></th>
   </tr>
 
 <% @shoppings.each do |shopping| %>
   <tr>
     <td><%= shopping.nome %></td>
     <td><%= shopping.telefone %></td>
     <td><%= truncate shopping.localizacao, :length => 50%></td>
     <td><%= shopping.email %></td>
     <td><%= link_to 'Mostrar', shopping %></td>
     <td><%= link_to 'Editar', edit_shopping_path(shopping) %></td>
     <% if @current_admin.tipo == 0 %>
     <td><%= link_to 'Apagar', shopping, :confirm => 'Tem a certeza?', :method => :delete %></td>
     <% end %>
    <td> <%= link_to 'Gerir Lojas', admins_lojas_path(shopping) %> </td>
    <td> <%= link_to 'Gerir Filmes', admins_filmes_path(shopping) %> </td>
    <td> <%= link_to 'Gerir Eventos', admins_eventos_path(shopping) %> </td>
   </tr>
 <% end %>
 </table>
    </div>
  </div>
    <div class="row">
      <div class="twelve columns"> 
      <% if @current_admin.tipo == 0 %>
            <%= link_to 'Adicionar Shopping', new_shopping_path, :class => "nice small radius blue button"  %>
            <% end %>
		 	</div>
    </div>
</section>

