 <div class = "navigation">
       <%= tabs_tag do |tab| %>
       <%= tab.home      "Home", root_path %>
       <%= tab.filme      "Filmes", filmes_all_path %>
       <% end %> 
    </div>
<section>
     <div class="row">
      <div class="twelve columns"> 
        <div class="underline"><h1>Filmes</h1></div>   
      </div>
      </section>

<% if @filmes != nil && @filmes.count > 0 %>
  <section>
  <div class="row display">
<div class="four columns offset-by-eight">
Filtro:
<input type="text" class="filter" name="liveFilter" onKeyup ="update_filmes(this.value)" />   <p></div>
<p>
</div>
  <div id="filmes">
    <% shopping_actual = "" %> 
    <% @filmes.each do |filme| %>
    
     <% if filme.shopping_nome != shopping_actual %>
      
       <% reset_cycle("rows") %>
      
		 <div class="row">
      <div class="twelve columns"> 
        <div class="underline"><h3><%= filme.shopping_nome %></h3></div>   
      </div>
    <% shopping_actual = filme.shopping_nome %>  
      <% end %>
    

<%= cycle("</div><div class='row'>","","","",:name => "rows").html_safe %>
<div class="three columns">
  <center>
  <%= link_to image_tag(filme.imagem, :height => "200px"), shopping_filme_path(filme.shopping_id, filme) %>
