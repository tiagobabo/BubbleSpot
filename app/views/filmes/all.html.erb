 <div class = "navigation">
       <%= tabs_tag do |tab| %>
       <%= tab.home      "Home", root_path %>
       <%= tab.filme      "Filmes", filmes_all_path %>
       <% end %> 
    </div>

<% if @filmes != nil && @filmes.count > 0 %>
  <section>
    <% shopping_actual = "" %> 
    <% @filmes.each do |filme| %>
    
     <% if filme.shopping_nome != shopping_actual %>
      
       <% reset_cycle("rows") %>
      
		 <div class="row">
      <div class="twelve columns"> 
        <div class="underline"><h3>Filmes do <%= filme.shopping_nome %></h3></div>   
      </div>
    <% shopping_actual = filme.shopping_nome %>  
      <% end %>
    

<%= cycle("</div><div class='row'>","","","",:name => "rows").html_safe %>
<div class="three columns">
  <center>
  <%= link_to image_tag(filme.imagem, :height => "200px"), shopping_filme_path(filme.shopping_id, filme) %>
  <p><%= filme.nome%></p>
  </center>
  <p></p>
</div>
<% end %>

</div>

</section>
<%else %>

		 <div class="row">
      <div class="twelve columns"> 
        <div class="underline"><h2>NÃ£o foram encontrados filmes..</h2></div> 
      </div>
		 </div>

</section>


<%end %>

